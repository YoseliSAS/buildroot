#%PAM-1.0
auth        required      pam_listfile.so   item=tty apply=@root sense=allow  file=/etc/security/pam_listfile.allow  onerr=fail
auth        required      pam_tally2.so     file=/var/log/tallylog deny=3 even_deny_root lock_time=5 unlock_time=600
auth        sufficient    pam_unix.so
auth        requisite     pam_deny.so

account     sufficient    pam_unix.so
account     requisite     pam_deny.so

password    sufficient    pam_unix.so
password    requisite     pam_deny.so

session     sufficient    pam_unix.so
session     requisite     pam_deny.so
