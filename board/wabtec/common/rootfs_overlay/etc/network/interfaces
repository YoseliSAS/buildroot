# Configure Loopback
auto lo
iface lo inet loopback

#eth0  maintenance link
auto eth0
	iface eth0 inet static
	address 192.168.0.1
	netmask 255.255.255.0
	gateway 192.168.0.254

#eth1  train network link
auto eth1
	iface eth1 inet static
	address 192.168.1.1
	netmask 255.255.255.0
	gateway 192.168.1.254
